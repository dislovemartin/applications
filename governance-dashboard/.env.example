# ACGS-PGP Governance Dashboard Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# MICROSERVICES ENDPOINTS
# =============================================================================

# AC Service (Artificial Constitution) - Constitutional principles management
REACT_APP_AC_API_URL=http://localhost:8001/api/v1

# GS Service (Self-Synthesizing Engine) - Policy synthesis and validation
REACT_APP_GS_API_URL=http://localhost:8003/api/v1

# PGC Service (Prompt Governance Compiler) - Runtime compliance checking
REACT_APP_PGC_API_URL=http://localhost:8004/api/v1

# Auth Service - Authentication and authorization
REACT_APP_AUTH_API_URL=http://localhost:8002/auth

# Integrity Service - System integrity monitoring
REACT_APP_INTEGRITY_API_URL=http://localhost:8006/api/v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
NODE_ENV=development

# Application version
REACT_APP_VERSION=1.0.0

# Application name
REACT_APP_NAME=ACGS-PGP Governance Dashboard

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable HTTPS-only mode in production
REACT_APP_ENABLE_HTTPS_ONLY=false

# Enable secure cookies (set to true in production)
REACT_APP_SECURE_COOKIES=false

# CORS origins (comma-separated list)
REACT_APP_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug mode
REACT_APP_DEBUG_MODE=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Analytics tracking ID (optional)
REACT_APP_ANALYTICS_ID=

# Error tracking DSN (optional)
REACT_APP_SENTRY_DSN=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# API request timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# Enable API request logging
REACT_APP_LOG_API_REQUESTS=true

# Mock data mode (for development without backend)
REACT_APP_MOCK_DATA_MODE=false
