# ACGS-PGP Legacy Frontend Migration - Phase 1 Environment Configuration
# Phase 1: Foundation and Low-Risk Components (Days 1-4)

# Migration Phase Configuration
REACT_APP_MIGRATION_PHASE=foundation
REACT_APP_MIGRATION_VERSION=1.0.0
REACT_APP_MIGRATION_START_DATE=2025-06-15

# Infrastructure Feature Flags (Safe to enable)
REACT_APP_USE_SHARED_THEME=true
REACT_APP_USE_SHARED_AUTH=true

# Layout and UI Flags (Start disabled, enable gradually)
REACT_APP_USE_SHARED_LAYOUT=false
REACT_APP_USE_SHARED_ERROR_HANDLING=false

# Component Migration Flags (All disabled in Phase 1)
REACT_APP_USE_SHARED_DASHBOARD=false
REACT_APP_USE_SHARED_QUANTUMAGI=false
REACT_APP_USE_SHARED_MONITORING=false

# Service Migration Flags (All disabled in Phase 1)
REACT_APP_USE_SHARED_CONSULTATION=false
REACT_APP_USE_SHARED_AMENDMENT=false

# Page Migration Flags (All disabled in Phase 1)
REACT_APP_USE_SHARED_PAGES=false
REACT_APP_USE_SHARED_ROUTING=false

# Emergency Controls (Always start disabled)
REACT_APP_EMERGENCY_ROLLBACK=false
REACT_APP_MAINTENANCE_MODE=false

# Legacy Mode Override (Set to true to force all legacy components)
REACT_APP_LEGACY_MODE=false

# ACGS Service URLs
REACT_APP_AUTH_API_URL=http://localhost:8002/api/v1
REACT_APP_AC_API_URL=http://localhost:8001/api/v1
REACT_APP_INTEGRITY_API_URL=http://localhost:8006/api/v1
REACT_APP_FV_API_URL=http://localhost:8004/api/v1
REACT_APP_GS_API_URL=http://localhost:8003/api/v1
REACT_APP_PGC_API_URL=http://localhost:8005/api/v1
REACT_APP_EC_API_URL=http://localhost:8007/api/v1

# Solana Configuration
REACT_APP_SOLANA_NETWORK=devnet
REACT_APP_SOLANA_RPC_URL=https://api.devnet.solana.com
REACT_APP_QUANTUMAGI_PROGRAM_ID=QuantumagiProgramId

# Monitoring and Analytics
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_TRACKING=true

# Development Settings
REACT_APP_DEBUG_FEATURE_FLAGS=true
REACT_APP_SHOW_MIGRATION_BANNER=true
REACT_APP_LOG_LEVEL=info

# Performance Targets
REACT_APP_PERFORMANCE_TARGET_RESPONSE_TIME=500
REACT_APP_PERFORMANCE_TARGET_UPTIME=99.5
REACT_APP_PERFORMANCE_TARGET_ERROR_RATE=0.02

# Security Settings
REACT_APP_ENABLE_CSRF_PROTECTION=true
REACT_APP_ENABLE_CONTENT_SECURITY_POLICY=true
REACT_APP_SECURE_COOKIES=true
